<% layout("/layouts/boilerplate") %>

<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter{
    margin-top: 2rem;
    margin-right: 2.5rem;
    text-align: center;
    opacity: 0.7;

  }
  .filter:hover{
    opacity: 1;
   cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .tax-info{
    display: none;
  }
  
